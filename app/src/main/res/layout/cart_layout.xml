<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.thirdapplication.MainActivity">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Image 1 -->

        <!-- Image 2 -->

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/itemImageView"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Image 1"
            android:src="@mipmap/ic_launcher" />

        <!-- Title and Description -->

        <!-- Bold Text 1 and Text 2 -->

        <ImageView
            android:id="@+id/addItemToCard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:contentDescription="Image 2"
            android:src="@drawable/ic_baseline_add_shopping_cart_24" />

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"
            android:orientation="vertical"> <!-- Added margin for separation -->

            <!-- Bold Text 1 -->
            <TextView
                android:id="@+id/itemNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amandes "
                android:textStyle="bold" />

            <!-- Text 2 -->
            <TextView
                android:id="@+id/itemDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F" />

        </LinearLayout>


        <!-- Buttons -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <!-- Bold Text 1 -->

            <!-- Text 2 -->
            <TextView
                android:id="@+id/itemPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 DZD"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemPriceQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 "





                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >


            <!-- + Button -->

            <!-- Number -->

            <!-- - Button -->

            <Button
                android:id="@+id/plusButton"
                android:layout_width="30dp"
                android:padding="0dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="+"

                />

            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:text="0" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:textSize="18dp"
                android:text="━" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
